<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>de.repictures.fingerhut.Backend.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SaveAccount</servlet-name>
        <servlet-class>de.repictures.fingerhut.Backend.SaveAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveAccount</servlet-name>
        <url-pattern>/saveaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostFinancialStatus</servlet-name>
        <servlet-class>de.repictures.fingerhut.Backend.PostFinancialStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostFinancialStatus</servlet-name>
        <url-pattern>/postfinancialstatus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetTransfers</servlet-name>
        <servlet-class>de.repictures.fingerhut.Backend.GetTransfer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTransfers</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostTransfers</servlet-name>
        <servlet-class>de.repictures.fingerhut.Backend.PostTransfers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostTransfers</servlet-name>
        <url-pattern>/posttransfers</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>